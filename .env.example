# Environment Configuration for Sports Betting App

# RapidAPI Key for NBA stats
RAPIDAPI_KEY=your_rapidapi_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration (if using external DB)
DATABASE_URL=sqlite:///Data/dataset.sqlite

# Logging Level
LOG_LEVEL=INFO

# API Rate Limiting (requests per minute)
API_RATE_LIMIT=60

# Cache TTL (Time To Live) in seconds
CACHE_TTL=600

# Model Configuration
DEFAULT_MODEL=xgboost
MODEL_CONFIDENCE_THRESHOLD=0.6

# Sportsbook Configuration
DEFAULT_SPORTSBOOK=fanduel
SUPPORTED_SPORTSBOOKS=fanduel,draftkings,betmgm,pointsbet,caesars,wynn,bet_rivers_ny